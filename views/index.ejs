<%- include('partials/header', { title: 'Products' }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Products</h1>
  <% if (currentUser && currentUser.rule === 'admin') { %>
    <a href="/products/new" class="btn btn-success">Add product</a>
  <% } %>
</div>

<div class="row g-3">
  <% products.forEach(p => { %>
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <img src="<%= p.pic %>" class="card-img-top object-fit-cover" style="height: 180px" alt="pic" />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= p.name %></h5>

          <p class="card-text small text-muted"><%= p.desc %></p>

          
          <p class="small text-primary">
  Category: <%= p.category %>
</p>


          <div class="d-flex justify-content-between align-items-center mt-auto">
            <span class="fw-bold">$<%= Number(p.price).toFixed(2) %></span>

            <% if (currentUser && currentUser.rule === 'admin') { %>
              <div class="btn-group">
                <a class="btn btn-outline-primary btn-sm" href="/products/<%= p.id %>/edit">Edit</a>
                <form action="/products/<%= p.id %>/delete" method="post">
                  <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete product?')">Delete</button>
                </form>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
